@{
    ViewBag.Title = "Contacto";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 fondoForm">
            <h2 class="text-center">¡Contáctanos!</h2>
            <p class="text-center">¿Tienes alguna pregunta o comentario? No dudes en ponerte en contacto con nosotros. Estamos aquí para ayudarte.</p>
            <br />
            <form action="@Url.Action("Contact", "Home")" method="post" class="form-horizontal img-rounded" role="form">
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">Nombre</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Nombre" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label">Correo electrónico</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Correo electrónico" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="message" class="col-sm-2 control-label">Mensaje</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="5" id="message" name="message" placeholder="Escribe tu mensaje aquí" required></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-envelope"></span> Enviar mensaje</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<address>
    <strong>Soporte técnico web:</strong>   <a href="mailto:Support@recorre_mundo.com">soporte@recorre_mundo.com</a><br />
</address>